$radius = 8px
.pc
  .cover
    position relative
    border-radius $radius $radius 0 0
    overflow hidden
    cursor pointer
    .title
      position absolute
      bottom 0
      padding .2rem .5rem
      color #fff
      font-size .7rem
      font-weight 700
      overflow:hidden;
      text-overflow:ellipsis;
      white-space:nowrap;
      text-shadow 0 0 2px rgba(0, 0, 0, .5)
  .links
    margin-top -.2rem
    padding .4rem .4rem .2rem .5rem
    background #fff
    border-radius 0 0 $radius $radius
  .link
    padding .1rem 0
    display flex
    cursor pointer
    .bd-1px-b
      padding-top .4rem
    &:last-child
      .bd-1px-b
        display none
    .title
      flex 1
      padding-bottom .25rem
      margin-right .4rem
      &:after
        border-color #eee
    .text
      height 1.8rem
      line-height 1rem
      font-size .7rem
      display: -webkit-box;
      color #555
      justify-content center
      -webkit-box-orient: vertical;
      -webkit-line-clamp: 2; //需要控制的文本行数
      overflow: hidden
    .bd-1px-b
        margin-top .1rem
    .img-wrap
      width 2rem
      .img
        border-radius 3px

.mob
  .cover
    position relative
    background red
    border-radius 5px 5px 0 0
    overflow hidden
    .title
      position absolute
      bottom 0
      padding .5rem 1rem
      color #fff
      margin-top -3rem
  .links
    padding .25rem 1rem .75rem 1rem
    background #fff
    border-radius 0 0 5px 5px
  .link
    display flex
    margin .25rem 0
    &:last-child
      .bd-1px-b
        display none
    .title
      flex 1
      padding-top .3rem
      margin-right 1.5rem
      &:after
        border-color #eee
    .text
      height 3rem
      display: -webkit-box;
      justify-content center
      -webkit-box-orient: vertical;
      -webkit-line-clamp: 2; //需要控制的文本行数
      overflow: hidden
    .bd-1px-b
      margin-top 1rem
    .img-wrap
      margin-top .5rem
      width 3.5rem
