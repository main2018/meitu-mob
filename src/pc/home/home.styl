.pc-home-wrapper
  width 100vw
  // background linear-gradient(to right, #666 50%, $color-bg 50%)
.pc-home
  margin 0 auto
  display flex
  min-height 100vh
  color $color-text-white
  background #333
.pc-aside
  width 220px
  padding-right 50px
.pc-content
  flex 1
  overflow hidden
.pc-panels-wrapper
  width 8rem
.pc-panels
  position fixed
  top 0
@media screen and (min-width:1600px)
  .pc-home
    width 1400px
@media screen and (min-width:1440px) and (max-width: 1599px)
  .pc-home
    width 1200px
@media screen and (min-width:1024px) and (max-width: 1439px)
  .pc-home
    width 1000px
