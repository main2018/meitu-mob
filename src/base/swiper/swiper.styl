.aw-swiper-wrap
  width: 100%
  overflow-x: hidden
.aw-swiper-content
  transition 0.5s
  display flex
  &>li
    flex 1
.aw-swiper-item
  width 100%
  cursor pointer

.aw-swiper-nav
  display flex
.aw-swiper-l
.aw-swiper-r
  flex 1
.aw-swiper-dot
  width .6rem
  height .6rem
  margin .3rem
  border-radius 50%
  border 1px solid #333
  background #ccc
  cursor pointer
.aw-swiper-active
  background $color-bg
