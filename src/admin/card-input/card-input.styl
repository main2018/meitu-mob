$bg = rgb(250, 250, 250)

.card-input
  display flex
  padding .8rem .8rem
  padding-bottom .5rem
  border 1px solid #ccc
  margin-bottom .5rem

.input-cover
  width 13rem
  flex-width 13rem
  position relative
  .upload
    position absolute
    left 3.5rem
    top 3.5rem
    padding 0 .5rem
    cursor pointer
    border-radius .5rem
    background rgba(255, 255, 255, .3)
  .preview
    width 12rem
    height 9rem
    background $bg
    background-repeat no-repeat
    background-size cover
    background-position center
.input-list
  flex 1
  .input-options
    padding-bottom .5rem
    display flex
    .hint
      width 4rem
    .radio label
      margin-right 1rem
    .video
      margin-left 1.5rem
  .input-item li
    padding .45rem 0
    display flex
    label
      width 4rem
    input[type="text"]
      padding .3rem
      width 100%
      color $color-input
      background $color-bg
      border-bottom 1px solid #ddd
    textarea
      padding .3rem
      width 100%
      height 3.2rem
      line-height 1.1rem
      resize none
      font-size .9rem
      color $color-input
      background $color-bg
      border none
      border 1px solid #ddd
  .mdi
    display inline-block
    margin 0 .3rem
    vertical-align center
    color #666
.input-button
  text-align center
  input
    width 15rem
    margin 20px 10px
    padding 10px
    border-radius 5px
    color #fff
    cursor pointer
  .reset
    background-color red
  .submit
    background-color #3af
