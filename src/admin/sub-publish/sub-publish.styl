.title
  display flex
  margin-top 1rem
  margin-bottom .25rem
  // background #ddd
  // padding-left .5rem
  .text
    flex 1
    margin-left .5rem
    font-weight 700
    border-bottom 2px solid #eee
  .icon
  .mdi
    background #3af
    width 1.5rem
    border-radius 50%

.list
  display flex
  margin-bottom -.5rem
.item
  margin-right 1rem

input
  background none
  color #666

.input-wrapper
  flex 1
  .url
    display flex
    width 100%
    margin-right 1rem
    border-bottom 1px solid #ccc
  input
    flex 1
    line-height 1.5rem
textarea
  width 100%
  height 2.4rem
  padding .3rem 0
  line-height 1.2rem
  resize none
  font-size 1rem
  color #888
  background none
  border 1px solid #ccc
  border none
  border-bottom 1px solid #ccc

.operator
  margin-left .5rem
  width 5rem
  text-align right
  .order
    width 4.5rem
    input
      width 2.5rem


.mdi
  width 1.5rem
  height 1.5rem
  line-height 1.5rem
  text-align center
  border-radius 50%
  color #fff
  cursor pointer
.mdi-close
  margin .8rem 0 0 1.5rem
  background red
.mdi-plus
  width 2rem
  border-radius 0
  background #aaa
