$aside-width = 15rem
$bg = rgb(245, 246, 247)
.menu
  display flex
  padding-left 10px
  padding-right 5px
  height 2rem
  line-height 2rem
  color $bg
  background gray
  .brand
    flex 1
    span
      font-weight 700
  .mdi
    width 2rem
    text-align center
    cursor pointer
.home
  min-height 100vh
  background $bg
  display flex
.aside
  position fixed
  z-index 10000
  width $aside-width
  min-height 100vh
  background #eee
.container
  margin-left $aside-width
  width 100%
  // background #333
  flex 1
  .nav
    position fixed
    display flex
    z-index 1000

    width calc(100% - 15rem)
    height 2rem
    line-height 2rem
    background #666
    color #fff
  .crumb
    padding-left 15px
    flex 1
  .add
    width 2rem
    font-size 1.6rem
    text-align center
    cursor pointer
  .add-publish
    background #aaa
  .add-updates
    background #00f
  .nav-gap
    margin-bottom 2rem
.card-wrapper
  margin 15px 0 0 15px
  display inline-block
  width 18rem
