.sign-form
  input
    width 90%
    display block
    padding 15px 5%
    background none
    border-bottom: 1px solid #ccc;
  .form-btn
    width 50%
    margin 50px auto 0 auto
    padding 12px
    text-align center
    cursor pointer
    &:active
      &:after
        background #eee
  .normal
    color #aaa
    &:after
      border-radius: 20px;
      border 1px solid #aaa
  .active
    &:after
      border-radius: 20px;
      border 1px solid #3af
  .href
    width 100%
    margin-top 30px
    text-align center
    cursor pointer
