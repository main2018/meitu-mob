.category-editor
  position fixed
  z-index 100
  width calc(100% - 15rem)
  min-height 100vh
  left 15rem
  top 0
  background $color-bg
  overflow-y auto
  // box-shadow: 1px 3px 5px rgba(0, 0, 0, .2)
.title
  display flex
  height 2rem
  background #666
  color #fff
  .txt
    flex 1
    padding-left 15px
  .mdi
    width 2rem
    text-align center
    background #aaa
    cursor pointer

.table
  margin-top 2.5rem
  width 100%
  ul
    display flex
    padding 0 10px
  li
    text-align left
    border-bottom 1px solid #ccc
  .order
    width 3rem
    flex-width 3rem
  .page
  .type
    color #555
    width 15rem
    flex-width 15rem
    label
      margin-right .2rem
    input
      margin-left .2rem
  .icon
    width 5.5rem
    flex-width 5.5rem
  .category
    flex 1
  .name
    flex 1
  .page
    flex 1
  .operator
    color #555
    width 9rem
    flex-width 9rem

.header
  display flex
  li
    height 2rem
    font-weight 700
.content li
  height 3rem
  padding 3px 0
  line-height 3rem
.mdi
  margin 0 8px
  cursor pointer
.iconimg
  height 3rem
