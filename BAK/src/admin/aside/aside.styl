.aside
  line-height 2rem
  .first
    .text
      padding-left 10px
      font-weight 700
.category-editor
  // border-bottom 1px solid #ccc
  // margin-bottom .1rem
  height 3rem

.category-wrapper
  height calc(100vh - 5rem)
  overflow-x hidden
  overflow-y auto
  border-top 1px solid #ccc
.first,
.second
  cursor pointer
  display flex
  &:hover
    .btn
      display block

  .active-block
    display block
    margin-right -.5rem
    width .5rem
    background $color-theme

.active:after
    content 'â—€'
    margin-right -.2rem
    color $color-bg
.second .text
    margin-left 20px
.text
  flex 1
.btn
  display none
  margin 5px 10px 5px 0
  width 25px
  line-height 1.2rem
  text-align center
  font-weight normal
  // border 1px solid #ccc
  border-radius 5px
  cursor pointer
.category
  background #ddd
.subcategory
  list-style disc
  background #eee
