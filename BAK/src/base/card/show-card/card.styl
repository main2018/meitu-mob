.card
  padding-bottom 5px
  border-bottom 2px solid #aaa
  background #fff
  position relative
  &:hover
    .btn
      display block

.img
  cursor pointer
.btn
  position absolute
  display none
  top 0
  right 0
  background red
  color #fff
  width 2rem
  height 2rem
  line-height 2rem
  text-align center
  cursor pointer
.title
  height 2.5rem
  margin 5px 10px 0 10px
  line-height 1.3rem
  font-weight 500
  font-size .95rem
  color #333

  overflow: hidden
  text-overflow: ellipsis
  display -webkit-box
  -webkit-line-clamp 2
  -webkit-box-orient vertical
.foot
  display flex
  margin 10px 10px 5px 10px
  font-size .7rem
  color #888
  .time
    width 4.5rem
    flex-width 4.5rem
  .category
    flex 1
    text-align right
  .mdi
    cursor pointer

